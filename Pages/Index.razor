@page "/"
<PageTitle>csgo match bot</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16">
    <MudPaper Elevation="0" Height="400px" Width="100%" Square="true" Class="pa-8">
        <MudText Typo="Typo.body1">
            This is a very simple and bare bones example on how to add a twitch Bot to a channel using Authorization code grant flow
            <br/>
            https://dev.twitch.tv/docs/authentication/getting-tokens-oauth
        </MudText>
    </MudPaper>
    <MudPaper Elevation="0" Height="150px" Width="100%" Square="true"
              Class="mt-8 d-flex align-content-center justify-center flex-wrap flex-grow-1 gap-4">
        <MudPaper Elevation="0">
            @if (currentChannel is not null)
            {
                @if (_channelJoined)
                {
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="LeaveChannelAsync">
                        Remove bot from channel
                    </MudButton>
                }
                else
                {
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="JoinChannelAsync">
                       Add bot to channel
                    </MudButton>
                }
            }
            else
            {
                <MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="BeginAuthorization">
                    Login!
                </MudButton>
            }
        </MudPaper>
    </MudPaper>
</MudContainer>
